<link rel="stylesheet" href="/css/autos/lista.css">

<form action="/cars/list/{{user.idUsers}}" method="get" id="ocultar">
    <div id="contenedor">
        <div class="row">
            {{#each list}}
            <div id="tarjetas">
                <div id="imagen">
                    <img src="/img/cars/{{imageCars}}" alt="">
                </div>

                <div id="matricula">
                    <label>Placa:</label>
                    <p>{{licenseplateCars}}</p>
                </div>

                <div id="modelo">
                    <label>Modelo:</label>
                    <p>{{brandCars}} {{modelCars}}</p>
                </div>

                <div id="editar">
                    <a href="/cars/edit/{{idCars}}">
                        <button type="button">Actualizar</button>
                    </a>
                </div>

                <div id="seleccionar">
                    <a href="/cars/matricula/list/{{idCars}}">
                        <button type="button">Matricula</button>
                    </a>
                </div>

                <div id="kilometraje">
                    <a href="/cars/kilometraje/list/{{idCars}}">
                        <button type="button">kilometraje</button>
                    </a>
                </div>

                <div id="orden">
                    <a href="/cars/ordenTrabajo/list/{{idCars}}">
                        <button type="button">Orden Trabajo</button>
                    </a>
                </div>

                <div id="implemento">
                    <a href="/cars/implementos/list/{{idCars}}">
                        <button type="button">Implementos</button>
                    </a>
                </div>

                <div id="mantenimiento">
                    <a href="/cars/mantenimiento/list/{{idCars}}">
                        <button type="button">Mantenimiento</button>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <div id="boton">
        <a href="/cars/add/{{user.idUsers}}">
            <button type="button">
                <img src="/img/icons/black/plus.png" id="plus">
            </button>
        </a>
    </div>
</form>