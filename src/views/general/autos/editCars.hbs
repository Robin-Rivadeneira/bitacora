<link rel="stylesheet" href="/css/autos/editar.css" />

{{#each list}}
<form action="/cars/edit/{{idCars}}" method="post" enctype="multipart/form-data">
    <div id="contenedor">
        <!-- Aquí comienza la seccion de imagen -->
        <div id="imagenCarro">
            <img src="/img/cars/{{imageCars}}">
            <div id="eleccion">
                <label>¿Desea actualizar la imagen?</label>
                <input type="radio" name="si" id="si" value="si" onclick="elecciones.SI()">
                <p id="pSi">Si</p>
                <input type="radio" name="no" id="no" value="no" onclick="elecciones.NO()">
                <p id="pNo">No</p>
            </div>

            <div id="imagenNueva">
                <div id="cambioImagen">
                    <img src="/img/cars/{{imageCars}}" id="imagenPrevisualizacion">
                </div>
                <input type="file" name="imageCars" id="seleccionArchivos" accept="image/*" />
            </div>
        </div>
        <!-- Aquí termina la sección de imagen -->

        <!-- Aquí comienza el formulario -->
        <div id="formulario">
            <div id="titulo">
                <p>ACTUALIZAR CARRO</p>
                <input type="text" name="idCarro" value="{{idCars}}" id="numero" readonly>
            </div>

            <div id="Placa">
                <label>Placa:</label>
                <input type="text" name="licenseplateCars" required value="{{licenseplateCars}}">
            </div>

            <div id="Marca">
                <label>Marca:</label>
                <input type="text" name="brandCars" id="" required value="{{brandCars}}">
            </div>

            <div id="Modelo">
                <label>Modelo:</label>
                <input type="text" name="modelCars" id="" required value="{{modelCars}}">
            </div>

            <div id="FechaMatricula">
                <label>Fecha de Matricula:</label>
                <input type="date" name="yearsLicenseplateCars" id="" required value="{{yearsLicenseplateCars}}">
            </div>

            <div id="FechaCasudidad">
                <label>Fecha Caducidad Matricula:</label>
                <input type="date" name="YearsExpirationLicensePlateCars" id="" required
                    value="{{YearsExpirationLicensePlateCars}}">
            </div>

            <div id="Clase">
                <label>Clase:</label>
                <select name="classCars" id="">
                    <option value="{{classCars}}">
                        <p>{{classCars}}</p>
                    </option>

                    <option value="A">
                        <p>A</p>
                    </option>

                    <option value="B">
                        <p>B</p>
                    </option>

                    <option value="C">
                        <p>C</p>
                    </option>

                    <option value="D">
                        <p>D</p>
                    </option>

                    <option value="E">
                        <p>E</p>
                    </option>

                    <option value="F">
                        <p>F</p>
                    </option>

                    <option value="SUV">
                        <p>SUV</p>
                    </option>

                    <option value="M">
                        <p>M</p>
                    </option>

                    <option value="S">
                        <p>S</p>
                    </option>
                </select>
            </div>

            <div id="Color">
                <label>Color:</label>
                <input type="text" name="colourCars" id="" required value="{{colourCars}}">
            </div>

            <div id="Chasis">
                <label>Chasis:</label>
                <input type="text" name="chassisCars" id="" required value="{{chassisCars}}">
            </div>

            <div id="Motor">
                <label>Motor:</label>
                <input type="text" name="engineCars" id="" required value="{{engineCars}}">
            </div>

            <div id="Año">
                <label>Año:</label>
                <input type="text" name="yearsCars" required value="{{yearsCars}}">
            </div>
        </div>

        <div id="boton">
            <button type="submit">Guardar</button>
        </div>
    </div>
    {{/each}}
</form>

<script src="/js/previsualizacion.js"></script>
<script src="/js/elecion.js"></script>